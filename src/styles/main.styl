.main 
    font-size 16px;
    
body     
    background: #F8FAF9;

.content
    background: rgba(249,251,253,1);
    padding-bottom: 60px

.main-tab 
    width: 100%;
    height: 58px;
    z-index: 100;
    background: white;
    padding: 5px;
    border-bottom: 1px solid #e6e6e6;
    &-item
        width:120px;
        height:58px;
        background:rgba(177,207,250,0);
        line-height: 54px
        &.active
            background:rgba(222,234,251,.4);
            
        &-border
            border-bottom: 4px solid rgba(0,84,210,1);
.main-right
    &-btn
        width: 98px;
        height: 32px;
        line-height: 32px;
        text-align: center;
        background:rgba(255,255,255,1);
        color:rgba(0,84,210,1);
        border: 1px solid rgba(0,84,210,1);
    &-icon
        width: 28px;
        height 28px;
    &-avatar
        width: 40px
        height 40px
        .user-name-box
            font-weight:400;
            color:rgba(125,142,168,1);
            line-height:18px;

.footer
    background: #ffffff
    padding-top: 30px
    padding-bottom: 25px
    &-title-gray
        font-size:14px;
        font-weight:400;
        color:rgba(125,142,168,1);
    &-bottom-link
        color:rgba(40,45,80,1);
        font-weight:400;

