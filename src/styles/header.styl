.h5_header
    width: 100%
    height ivw(88)
    background: #FFFFFF;
    padding: ivw(22) ivw(35)
    z-index: 10003
    .h5_header_title
        font-size: ivw(34)
        font-weight: 400;
        color: #000000;
        line-height: ivw(48)
    .h5_header_icon
        width: ivw(44)
        height ivw(44)
    .h5_header_icon_back
        margin-left: ivw(30)
.header-drawer-top
    width 100%
    height 100vh
    position absolute
    overflow auto
    -webkit-overflow-scrolling touch
    z-index 1000
    pointer-events none
    &.am-drawer-open 
        pointer-events auto
    .am-drawer-sidebar
        position absolute
        top:  0
        z-index 1002
        width 100%
        transform translateY(-100%)
        transition all 0.5s ease
        overflow auto
        -webkit-overflow-scrolling touch
        background: #ffffff
        box-shadow 1px 1px 2px rgba(0,0,0,.15)
.header-drawer-top.am-drawer-open
    .am-drawer-overlay
        z-index 1001
        position absolute
        top 0
        bottom 0
        left 0 
        right 0
        opacity 0.3
        background-color rgba(0,0,0,.3)
.h5_home_header_top
    padding: 0 ivw(35)
.h5_home_header_search_input
    width: ivw(670)
    height ivw(58)
    background: #EDF4FC;
    border-radius: ivw(29)
    margin-top: ivw(20)
    img 
