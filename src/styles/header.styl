    .home_search_input
        border: none 
        outline: none
        background: #EDF4FC;
.h5_home_header_item
    height ivw(98)
    line-height: ivw(98)
    .h5_home_header_item_img
        width: ivw(32)
        height ivw(32)
        margin-right: ivw(20)
.h5_home_header_btn
    width: 100%
    height ivw(72)
    background: #FFFFFF;
    border: ivw(1) solid #DD2815;
    opacity: 0.8;
    border-radius: ivw(10)
    font-size: ivw(32)
    font-weight: 400;
    color: #DE2816;
    line-height: ivw(36)
    margin-bottom: ivw(40)

.header-drawer-right
    width 100%
    position absolute
    overflow hidden
    -webkit-overflow-scrolling touch
    z-index 1000
    pointer-events none
    &.am-drawer-open 
        pointer-events auto
    .am-drawer-sidebar
        position absolute
        top ivw(88)
        bottom 0
        right 0
        z-index 1002
        width ivw(500)
        height 100vh
        background: #ffffff
        transform translateX(100%)
        background color-primary-bg
        transition all 0.5s ease
        overflow auto
        -webkit-overflow-scrolling touch
        box-shadow 1px 1px 2px rgba(0,0,0,.15)
    .am-drawer-overlay
        z-index 1001
        position absolute
        top 0
        bottom 0
        left 0 
        right 0
        opacity 0
        background-color rgba(0, 0, 0, 0.4)
