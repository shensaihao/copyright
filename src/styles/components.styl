.i-btn
    cursor pointer
    text-align center
    height 45px
    line-height: @height;
    font-size 20px
    color white
    background:rgba(1,87,183,1);
    border-radius:4px;
    display: flex;
    justify-content: center;
    align-items: center;
    &.loading 
        opacity .6
    &:active 
        opacity .7
.i-btn.plain
    background: rgba(255, 255, 255, 0);
    border: 1px solid #0666CE;
    border-radius: 6px;
    font-size: 20px;
    font-weight: 400;
    color: #0666CE;
    


.confirm-modal 
    &.am-modal-transparent 
        width: ipx(600)
    .am-modal-body
        height: auto;
        border-radius ipx(20);
.picker 
    .am-modal-content
        border-radius ipx(20) ipx(20) 0 0 
    &-item 
        height ipx(100)
        line-height @height
        font-size ipx(32)
        color color-main
        text-align: center
    &-cancel 
        @extends .picker-item
        color color-label
        border-top 1px solid color-border;
        &:active, ../-item:active 
            background: color-background

.modal 
    .am-modal-content
        border-radius ipx(20) ipx(20) 0 0 
    &-top 
        display flex
        align-items: center;
        height: ipx(80);
        border-bottom: 1px solid #DFEAE4;
    &-cancel 
        flex: 1;
        color: color-label;
        font-size: ipx(30);
        padding-left: ipx(30);
        text-align: left;
    &-title 
        flex: 1;
        color: color-main;
        text-align: center;
        font-size: ipx(30);
    &-right 
        flex: 1;
    
