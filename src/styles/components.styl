.input
    &-container
        width: 450px;
        height: 48px;
        background: #FFFFFF;
        border: 1px solid #D9DFE9;
        border-radius: 6px;
    &-wrapper
        height: 44px
        input 
            border: none 
            outline: none
            height 24px
            width: 270px
    &-line
        width: 1px;
        height: 18px;
        background: #D9DFE9;
        margin: 12px 10px 12px 0
    &-after-code
        height 46px
        line-height: 46px
        border-left: 1px solid #D9DFE9;
        border-radius: 0px 6px 6px 0px;
        padding: 0 25px
        color: #0665CE;
        cursor pointer
        border-top: none 
        border-bottom: none
    &-after-second
        height 46px
        line-height: 46px
        border-left: 1px solid #D9DFE9;
        border-radius: 0px 6px 6px 0px;
        padding: 0 10px
        color: #C4CDDC;
        cursor pointer
        border-top: none 
        border-bottom: none
    &-error
        font-size: 14px;
        font-weight: 400;
        color: #F87135;
        line-height: 11px;


